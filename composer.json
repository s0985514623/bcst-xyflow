{
  "name": "s0985514623/bcst-xyflow",
  "description": "BCST XYFlow is a plugin for creating a WordPress plugin with React, Tailwind, TypeScript, React Query v4, SCSS and Vite.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-only",
  "authors": [
    {
      "name": "Ren",
      "email": "s0985514623@gmail.com",
      "homepage": "https://github.com/s0985514623",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
	"autoload": {
		"psr-4": {
			"J7\\WpReactPlugin\\": "inc/classes/",
			"J7WpReactPlugin\\vendor\\": "vendor-prefixed/"
		}
	},
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "kucrut/vite-for-wp": "^0.8.0",
    "j7-dev/wp-utils": "0.2.57"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "@stable",
    "wp-coding-standards/wpcs": "@stable",
    "dealerdirect/phpcodesniffer-composer-installer": "@stable",
		"brianhenryie/strauss": "^0.20.1"
  },
  "scripts": {
    "lint": "phpcs",
		"prefix-namespaces": [
			"strauss",
			"@php composer dump-autoload"
		],
		"post-install-cmd": [
			"@prefix-namespaces"
		],
		"post-update-cmd": [
			"@prefix-namespaces"
		]
  },
	"extra": {
		"strauss": {
			"target_directory": "vendor-prefixed",
			"namespace_prefix": "J7WpReactPlugin\\vendor\\",
			"classmap_prefix": "J7WpReactPlugin_vendor_",
			"constant_prefix": "J7V_",
			"classmap_output": true,
			"update_call_sites": true,
			"exclude_from_copy": {
				"packages": [
					"yahnis-elsts/plugin-update-checker",
					"j7-dev/tgm-plugin-activation-forked"
				]
			}
		}
	}
}
